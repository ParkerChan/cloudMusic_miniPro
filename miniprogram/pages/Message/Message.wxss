page{
  background: #f1f1f1;
}

.message-list{
  margin-top: 0rpx;
}

.message-panel{
  margin-bottom:20rpx;
  box-sizing: border-box;
}

.message {
  padding: 20rpx;
  background-color: #fff;
}

.message-title {
  display: flex;
  align-items: center;
}

.message-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.message-box {
  flex: 1;
}

.message-time {
  font-size: 24rpx;
  color: #939393;
}

.message-content {
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.message-content .title{
  font-size: 60rpx;
  display: flex;
  font-weight: 200;
}

.message-nickName {
  font-size: 32rpx;
}
