.top-panel{
  background-size: 100%;
  background-position: center center;
  height: 40vh;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 0 32rpx;
}

.top-panel .basic-info{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 25rpx;
}

.top-panel .ugc-info{
  display: flex;
  align-items: center;
  justify-content: stretch;
  font-size: 28rpx;}

  .top-panel .ugc-info view{
    height: 125rpx;
    flex: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

.basic-info .avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.basic-info .avatar text{
  padding: 0 16rpx;
  font-size: 50rpx;
  font-weight: 300;
}

.playlist-title{
  display: flex;
  background-color: #eeeeee;
  font-size: 28rpx;
  padding: 12rpx 16rpx;
  color: #666666;
}

.playlist-item{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 16rpx;
  border-bottom: 1rpx solid #e1e2e3;
}

.playlist-item  .cover-img{
  width: 96rpx;
  height: 96rpx;
  border-radius: 15rpx;
}

.playlist-item .playlist-info{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 16rpx;
}

.playlist-item .playlist-info .name{
  font-size: 32rpx;
}

.playlist-item .playlist-info .info{
  font-size: 24rpx;
  color: #999;
}

.listName{
  margin-left: 15rpx;
  margin-top: 20rpx;
  margin-bottom: 25rpx;
  height: 80rpx;
}

.createSongList .listBunt{
  font-size: 30rpx;
  border: 0;
}

.userSay .Content{
  margin-top: 25rpx;
  margin-bottom: 25rpx;
