/*简易播放器*/
.placeholder-view {
  width: 100%;
  height: 75rpx;
}
.smusicPlayer-infor{
  display: flex;
  flex-direction: column;
}
.smusicPlayer .smusicPlayer-infor text{
  width: 200rpx;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  margin-left: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}


.smusicPlayer .icon-play{
  position: absolute;
  line-height: 80rpx;
  width: 80rpx;
  height: 80rpx;
  left: 500rpx;
  border: 10rpx solid rgb(10, 10, 10);
  border-radius: 100%;
}
.smusicPlayer .icon-play text{
  font-size: 55rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}
.smusicPlayer .icon-next{
  position: absolute;
  line-height: 80rpx;
  width: 80rpx;
  height: 80rpx;
  right: 50rpx;
  border: 10rpx solid rgb(10, 10, 10);
  border-radius: 100%;
}

.smusicPlayer .icon-pre{
  position: absolute;
  line-height: 80rpx;
  width: 80rpx;
  height: 80rpx;
  left: 400rpx;
  border: 10rpx solid rgb(10, 10, 10);
  border-radius: 100%;
}
.smusicPlayer .icon-pre text{
  font-size: 55rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}

.smusicPlayer .icon-next text{
  font-size: 55rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}
.smusicPlayer {
  border-radius: 3%;
  display: flex;
  width: 100%;
  padding: 20rpx 0;
  background-color: #b6b3b3;
  position: fixed;
  bottom: 0;
  left: 0;
}
.smusicPlayer-img{
  width: 85rpx;
  height: 85rpx;
  border-radius: 70%;
  display:flex;
  align-items:center;
  justify-content:center;
}