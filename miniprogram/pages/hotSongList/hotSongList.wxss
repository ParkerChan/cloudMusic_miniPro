.playlist-Container{
  position: relative;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 10rpx;
  flex-direction: row;
}

.playlist-container{
  position: absolute;
  width: 31%;
  position: relative;
  padding-bottom: 20rpx;
}

.playlist-Img{
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
}
.playlist-Name{
  font-size:26rpx;
  line-height: 1.2;
  padding: 2px 0 0 6px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}