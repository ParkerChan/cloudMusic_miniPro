.detail-container{
  height: 320rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

.detail-mask{
  position: absolute;
  width: 100%;
  height: 320rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.detail-img{
  width: 280rpx;
  height: 280rpx;
  margin-right: 24rpx;
  border-radius: 6rpx;
}

.detail-info{
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
}

.detail{
  flex-grow:1;
  line-height: 60rpx;
  width: 0;
}

.detail .suiji{
  color: #fff;
  font-size: 30rpx;
  border: 1rpx solid #fff;
  font-weight: 350;
  border-radius: 30rpx;
}

.detail view{
  color: #fff;
  font-size: 24rpx;
}

.detail .detail-nm{
  font-size: 36rpx;
  font-weight: 400;
}

/* 列表详情 */

.musiclist-container {
  position: relative;
  display: flex;
  padding: 14rpx 20rpx;
  align-items: center; /* 垂直居中 */
}

.musiclist-index {
  color: #888;
  font-size: 34rpx;
  width: 80rpx;
}

.musiclist-info {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  width: 0;
}

.musiclist-name {
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.musiclist-alia {
  color: #888;
}

.musiclist-singer {
  font-size: 24rpx;
  color: #888;
}

.playing .musiclist-index,
.playing .musiclist-name, 
.playing .musiclist-alia,
.playing .musiclist-singer {
  color: #d43c33;
}

.musiclist-info .iconfont{
  position: absolute;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.listScrollII{
  height: 300rpx;
}



/* 另外的 */

.scrollItem {
  display: flex;
  position: relative;
  margin-bottom: 20rpx;
}

.scrollItem image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
}


.listScrollII{
  height: 300rpx;
}
.listScrollII .scrollItem .musicInfo{
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 返回顶部 */
.goTop{
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 150rpx;
  background: rgba(0,0,0,.3);
  right: 50rpx;
  border-radius: 50%;
}

/*简易播放器*/
.placeholder-view {
  width: 100%;
  height: 150rpx;
}
.smusicPlayer-infor{
  display: flex;
  flex-direction: column;
}
.smusicPlayer .smusicPlayer-infor text{
  width: 200rpx;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  margin-left: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}


.smusicPlayer .icon-play{
  position: absolute;
  line-height: 80rpx;
  width: 80rpx;
  height: 80rpx;
  left: 500rpx;
  border: 10rpx solid rgb(10, 10, 10);
  border-radius: 100%;
}
.smusicPlayer .icon-play text{
  font-size: 55rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}
.smusicPlayer .icon-next{
  position: absolute;
  line-height: 80rpx;
  width: 80rpx;
  height: 80rpx;
  right: 50rpx;
  border: 10rpx solid rgb(10, 10, 10);
  border-radius: 100%;
}

.smusicPlayer .icon-pre{
  position: absolute;
  line-height: 80rpx;
  width: 80rpx;
  height: 80rpx;
  left: 400rpx;
  border: 10rpx solid rgb(10, 10, 10);
  border-radius: 100%;
}
.smusicPlayer .icon-pre text{
  font-size: 55rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}

.smusicPlayer .icon-next text{
  font-size: 55rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}
.smusicPlayer {
  border-radius: 3%;
  display: flex;
  width: 100%;
  padding: 20rpx 0;
  background-color: #b6b3b3;
  position: fixed;
  bottom: 0;
  left: 0;
}
.smusicPlayer-img{
  width: 85rpx;
  height: 85rpx;
  border-radius: 70%;
  display:flex;
  align-items:center;
  justify-content:center;
}