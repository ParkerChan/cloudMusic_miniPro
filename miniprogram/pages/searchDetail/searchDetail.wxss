
/* 列表详情 */

.musiclist-container {
  position: relative;
  display: flex;
  padding: 14rpx 20rpx;
  align-items: center; /* 垂直居中 */
  border-bottom: 1rpx solid #eee;
}

.musiclist-index {
  color: #888;
  font-size: 34rpx;
  width: 80rpx;
}

.musiclist-info {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  width: 0;
}

.musiclist-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 80%;
  border-bottom: 1rpx solid #d43c33;
}

.musiclist-name {
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.musiclist-alia {
  color: #888;
}

.musiclist-singer {
  font-size: 24rpx;
  color: #888;
}

.playing .musiclist-index,
.playing .musiclist-name, 
.playing .musiclist-alia,
.playing .musiclist-singer {
  color: #d43c33;
}

.musiclist-info .iconfont{
  position: absolute;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.listScrollII{
  height: 300rpx;
}



/* 另外的 */

.scrollItem {
  display: flex;
  position: relative;
  margin-bottom: 20rpx;
}

.scrollItem image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
}


.listScrollII{
  height: 300rpx;
}
.listScrollII .scrollItem .musicInfo{
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 返回顶部 */
.goTop{
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 50rpx;
  background: rgba(0,0,0,.3);
  right: 30rpx;
  border-radius: 50%;
}

.playlist-Container{
  position: relative;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 10rpx;
  flex-direction: row;
}

.playlist-container{
  position: absolute;
  width: 31%;
  position: relative;
  padding-bottom: 20rpx;
}

.playlist-Img{
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
}
.playlist-Name{
  font-size:26rpx;
  line-height: 1.2;
  padding: 2px 0 0 6px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}